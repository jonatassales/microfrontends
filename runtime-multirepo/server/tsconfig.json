{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "composite": false,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build/**"
  ]
}
